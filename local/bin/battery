#!/usr/bin/env bash

battery_value() {
	cat /sys/class/power_supply/BAT0/capacity
}
battery_status() {
	cat /sys/class/power_supply/BAT0/status
}


case $1 in
    --status)
        battery_status
    ;;
    --value)
        [[ $2 == "--percentage" ]] && echo "$(battery_value)%" || battery_value
    ;;
    *)
        echo "usage: battery [OPTIONS]
		
OPTIONS
   --status
   --value [--percentage]
"
    ;;
esac
